{
  "name": "goodvibespreserver",
  "version": "1.0.0",
  "type": "module",
  "description": "Browser extension that blocks unpleasant content",
  "scripts": {
    "build-py": "python convertresources.py",
    "build-ts": "find ./src \\( -path \"./src/tools\" \\) -prune -o -iname \"*.ts\" -exec sh -c 'bun build \"{}\" --outfile \"${0%.*}\".js --minify' {} ';'",
    "build-tsx": "bun build ./ui/options/options.tsx ./ui/popup/popup.tsx --outdir ./ui --splitting --minify",
    "build": "bun run build-py && bun run build-ts && bun run build-tsx",
    "install": "bun run build && web-ext build -o",
    "dev": "bun run build && web-ext run --devtools --firefox=deved --no-reload --arg=\"--devtools\" --start-url duckduckgo.com",
    "update-dev": "bun x npm-check-updates -u && bun install"
  },
  "keywords": [],
  "author": "Cofeiini <cofeiini@gmail.com> (https://github.com/Cofeiini)",
  "maintainers": [
    "Franco Gargiulo <francogargiulo2004@gmail.com> (https://github.com/kralloie)"
  ],
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "spark-md5": "^3.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/firefox": "^0.0.34",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/spark-md5": "^3.0.4",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.3.0",
    "node-html-to-image": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript-eslint": "^7.10.0",
    "web-ext": "^7.11.0"
  }
}
