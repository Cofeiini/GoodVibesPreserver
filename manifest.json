{
  "manifest_version": 2,
  "name": "Good Vibes Preserver",
  "version": "1.0",
  "description": "Extension meant to give the user a chill and nice experience while navigating the Internet",

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon.png"
    },
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "windows",
    "storage",
    "contextMenus"
  ],

  "background": {
    "scripts": ["scripts/background/background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/content/analyzeDOM.js"]
    }
  ]
}
